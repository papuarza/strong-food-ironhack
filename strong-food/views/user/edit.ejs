<div class="container">
    <div class="row">
        <div class="col-md-5 col-md-offset-4">
            <div>
                <div class="panel panel-primary">

                    <h3 class="text-center">
                        Update my information</h3>
                    <form method="POST" action="/edit/<%=user._id%>">
                        <div class="panel-body">

                            <div class="form-group">
                                <div class="input-group">
                                    <span class="input-group-addon"><span class="glyphicon glyphicon-user"></span>
                                    </span>
                                    <input type="text" name="username" class="form-control" value="<%=user.username%>" required />
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="input-group">
                                    <span class="input-group-addon"><span class="glyphicon glyphicon-envelope"></span></span>
                                    <input type="text" class="form-control" value="<%=user.email%>" name="email" required />
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="input-group">
                                    <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
                                    <input type="date" class="form-control" value="<%=user.birthday%>" name="birthday" required />
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="input-group">
                                    <span class="input-group-addon"><span class="glyphicon glyphicon-menu-hamburger"></span></span>
                                    <input type="text" class="form-control" value="<%=user.heigth%>" name: "heigth" required/>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="input-group">
                                    <span class="input-group-addon"><span class="glyphicon glyphicon-scale"></span></span>
                                    <input type="text" class="form-control" value="<%=user.weight%>" name=weight required/>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="input-group">
                                    <span class="input-group-addon"><span class="glyphicon glyphicon-heart-empty"></span></span>
                                    <select name="genere" value="3" class="form-control">
                            <option>Male</option>
                            <option>Female</option>
                          </select>
                                </div>
                            </div>
                            <button class="btn btn-lg btn-primary btn-block" type="submit">
    Update
  </button>


                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
